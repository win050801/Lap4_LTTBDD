<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/idLinearLayout"
    android:layout_height="80dp"
    android:layout_marginTop="1dp"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="73dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ca_nau_lau" />

    <TextView
        android:id="@+id/tvLanguagefirstName"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <TextView
        android:id="@+id/tvLanguagelastName"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tvLanguagefirstName"
        app:layout_constraintTop_toBottomOf="@+id/tvLanguagefirstName" />

    <Button
        android:id="@+id/button"
        android:layout_width="89dp"
        android:layout_height="48dp"
        android:text="Chọn"
        app:layout_constraintBottom_toBottomOf="@+id/tvLanguagelastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLanguagefirstName" />
</androidx.constraintlayout.widget.ConstraintLayout>